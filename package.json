{
  "name": "@garrick0/c3-shared",
  "version": "0.1.0-dev.0",
  "description": "Core domain abstractions and infrastructure for C3",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/garrick0/c3-shared"
  },
  "exports": {
    ".": "./dist/index.js",
    "./domain": "./dist/domain/index.js",
    "./infrastructure": "./dist/infrastructure/index.js",
    "./configuration": "./dist/configuration/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run --reporter=verbose",
    "test:skip": "echo 'No tests configured, skipping...'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "version:dev": "npm version prerelease --preid=dev.$(git rev-parse --short HEAD) --no-git-tag-version",
    "version:canary": "npm version prerelease --preid=canary --no-git-tag-version",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "c3",
    "code-standards",
    "domain",
    "infrastructure"
  ],
  "author": "garrick0",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  }
}
